<p id="notice"><%= notice %></p>

<div class="hero-unit">
  <%= render 'map' %>
</div>

<h1>Listing Cities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>City</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city %></td>
        <td><%= city.latitude %></td>
        <td><%= city.longitude %></td>
        <td><%= image_tag "#{get_wiki( city )}", :class => "img-polaroid", :width => "90px" %></td>
        <td><%= link_to 'Show', city, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_city_path(city), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path, :class => "btn btn-primary" %>
